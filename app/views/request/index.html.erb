   <div class="container">
    <div class="row">
      <p id="notice"><%= notice %></p>
      
      <h1><%= @trap_id %></h1>
      
      <h2>Requests</h2>

      <table class='table table-bordered'>
        <thead>
          <tr>
            <th><strong>Method:</strong></th>
            <th>Ip:</th>
            <th>Scheme:</th>
            <th>Params:</th>
            <th>Time:</th>
          </tr>
        </thead>

        <tbody id='requests'>
          <% @requests.each do |request| %>
          <tr>
            <td>
              <%= request.method %>
            </td>
            <td>
              <%= request.remote_ip %>
            </td>
            <td>
              <%= request.scheme %>
            </td>
            <td>
              <%= request.params %>
            </td>

            <td><%= request.created_at.strftime("%F %T") %></td>
            <td><%= link_to 'More', request_path(@trap_id, request), class: "btn btn-default" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>


